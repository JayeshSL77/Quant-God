# Inwezt Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM API Keys (at least one required)
# =============================================================================
MISTRAL_API_KEY=your-mistral-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# LLM Provider: mistral, openai, gemini
LLM_PROVIDER=mistral

# =============================================================================
# Data APIs
# =============================================================================
# RapidAPI Key for Indian Stock Exchange API
# Get yours at: https://rapidapi.com/suneetk92/api/indian-stock-exchange-api2
RAPIDAPI_KEY=your-rapidapi-key-here

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/inwezt
# Or use SQLite for development:
# DATABASE_URL=sqlite:///./inwezt.db

# =============================================================================
# Server Configuration
# =============================================================================
PORT=8000
HOST=0.0.0.0
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO

# =============================================================================
# Security
# =============================================================================
# CORS origins (comma-separated for multiple)
ALLOWED_ORIGINS=https://app.inwezt.com,https://www.inwezt.com
# For development:
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate limiting
MAX_REQUESTS_PER_MINUTE=30

# =============================================================================
# Observability (Production)
# =============================================================================
# Sentry error tracking - get DSN from https://sentry.io
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Log file (optional, leave empty for stdout only)
# LOG_FILE=/var/log/inwezt/app.log

